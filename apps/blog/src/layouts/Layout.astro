---
interface Props {
  title: string
}

const { title } = Astro.props
---

<!doctype html>
<html lang="es">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="Astro description" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <title>{title}</title>
  </head>
  <body>
    <header class="bg-black text-white">
      <nav class="m-auto max-w-6xl flex justify-center items-center gap-4 py-4">
        <a href="/" class="">
          <span class="">CI Board</span>
        </a>
        <a href="/login" class="">
          <span class="">Login</span>
        </a>
      </nav>
    </header>
    <main class="grid place-content-center m-auto max-w-5xl">
      <slot />
    </main>
  </body>
</html>
<style is:global></style>
